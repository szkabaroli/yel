package yel:nested-parent@1.0.0;

record Item {
    name: string,
    subitems: list<string>,
}

export component NestedParent {
    items: list<Item> = [
        { name: "Alice", subitems: ["a1", "a2"] },
        { name: "Bob", subitems: ["b1", "b2", "b3"] },
    ];

    VStack {
        for item in items key(item.name) {
            VStack {
                Text { "{item.name}" }
                for sub in item.subitems key(sub) {
                    Text { "- {sub}" }
                }
            }
        }
    }
}
